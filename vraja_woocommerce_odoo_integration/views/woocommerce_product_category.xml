<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--form view-->
        <record id="woocommerce_product_category_form" model="ir.ui.view">
            <field name="name">product category form</field>
            <field name="model">woocommerce.product.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="slug"/>
                            </group>
                            <group>
                                <field name="instance_id"/>
                                <field name="company_id"/>
                                <field name="parent_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree view-->
        <record id="woocommerce_product_category_tree" model="ir.ui.view">
            <field name="name">product category tree</field>
            <field name="model">woocommerce.product.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="instance_id"/>
                    <field name="company_id"/>
                    <field name="slug"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>

        <record id="action_woocommerce_product_category" model="ir.actions.act_window">
            <field name="name">Product Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">woocommerce.product.category</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a WooCommerce Product Category
                </p>
            </field>
        </record>
    </data>
</odoo>
