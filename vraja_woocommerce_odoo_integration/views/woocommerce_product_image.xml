<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="woocommerce_product_image_form_view" model="ir.ui.view">
            <field name="name">woocommerce.product.image.form.view</field>
            <field name="model">woocommerce.product.image</field>
            <field name="arch" type="xml">
                <form string="Listing Images Form">
                    <div class="row o_website_sale_image_modal">
                        <div class="col-md-6 col-xl-5">
                            <div class="oe_title">
                                <label class="small text-muted" for="name" string="Image Name"/>
                                <h2>
                                    <field name="name" placeholder="Image Name" required="True"/>
                                </h2>
                                <field name="woocommerce_listing_id" invisible="1"/>
                            </div>
                            <group>
<!--                                <field name="sequence"/>-->
                                <field name="woocommerce_instance_id" invisible="1"/>
                            </group>
                        </div>
                        <div class="col-md-6 col-xl-7 text-center o_website_sale_image_modal_container">
                            <field name="image" widget="image"/>
                        </div>
                    </div>
                    <group></group>
                    <group>
                        <field name="url"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_listing_image_woocommerce_product_image_kanban" model="ir.ui.view">
            <field name="name">woocommerce.product.image.kanban.view</field>
            <field name="model">woocommerce.product.image</field>
            <field name="arch" type="xml">
                <kanban string="Listing Images">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="card oe_kanban_global_click p-0">
                                <div class="o_squared_image">
                                    <img class="card-img-top" t-att-src="kanban_image('woocommerce.product.image', 'image', record.id.raw_value)" t-att-alt="record.name.value"/>
                                </div>
                                <div class="card-body p-0">
                                    <h4 class="card-title p-2 m-0 bg-200">
                                        <small>
                                            <field name="name"/>
                                        </small>
                                    </h4>
                                </div>

                                <div class="oe_kanban_details">
                                    <br/>
                                    <t t-set="size_status" t-value="'badge-success'"/>
                                    <span
                                            t-attf-class="badge #{size_status} o_product_image_size"
                                            t-esc="record.image.value" t-att-title="message"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>