<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- customer queue tree view-->
        <record id="woocommerce_customer_data_tree_view" model="ir.ui.view">
            <field name="name">WooCommerce Customer Data</field>
            <field name="model">woocommerce.customer.data.queue</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="instance_id"/>
                    <field name="create_date"/>
                    <field name="state" decoration-success="state == 'completed'" decoration-info="state == 'draft'"
                           decoration-warning="state == 'partially_completed'" decoration-danger="state == 'failed'"
                           widget="badge"/>
                </tree>
            </field>
        </record>
        <!-- customer queue form view-->
        <record id="woocommerce_customer_data_form" model="ir.ui.view">
            <field name="name">WooCommerce Customer Data</field>
            <field name="model">woocommerce.customer.data.queue</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button class="btn-primary" type="object" name="process_woocommerce_customer_queue"
                                string="Process Queue Manually"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="instance_id"/>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="woocommerce_log_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Customer Queue Detail Line" name="customer_queue_detail_line">
                                <field name="customer_queue_line_ids" readonly="1">
                                    <tree>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="name"/>
                                        <field name="state" decoration-success="state == 'completed'"
                                               decoration-info="state == 'draft'"
                                               decoration-warning="state == 'partially_completed'"
                                               decoration-danger="state == 'failed'"
                                               widget="badge"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="instance_id"/>
                                                    <field name="customer_queue_id"/>
                                                    <field name="customer_id"/>
                                                    <field name="state" readonly="1"/>
                                                </group>
                                                <group>
                                                    <field name="res_partner_id" readonly="1"/>
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Response Data" name="response">
                                                    <field name="customer_data_to_process" widget="ace"
                                                    />
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--        action customer queue-->
        <record id="action_woocommerce_customer_queue" model="ir.actions.act_window">
            <field name="name">Woocommerce Customer Queue</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">woocommerce.customer.data.queue</field>
            <field name="view_id" ref="woocommerce_customer_data_tree_view"/>
        </record>

        <data noupdate="1">
            <record id="seq_woocommerce_customer_queue" model="ir.sequence">
                <field name="name">WooCommerce customer queue seq</field>
                <field name="code">woocommerce.customer.data.queue</field>
                <field name="padding">5</field>
                <field name="prefix">Customer/Queue/</field>
                <field name="company_id" eval="False"/>
            </record>
        </data>
    </data>
</odoo>