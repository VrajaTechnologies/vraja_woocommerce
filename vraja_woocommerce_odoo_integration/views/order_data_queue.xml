<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--log tree view-->
        <record id="view_woocommerce_order_queue_tree_view" model="ir.ui.view">
            <field name="name">WooCommerce Order Queue</field>
            <field name="model">woocommerce.order.data.queue</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Process Detail" create='1'>
                    <field name="name"/>
                    <field name="instance_id"/>
                    <field name="create_date"/>
                    <field name="state" decoration-success="state == 'completed'" decoration-info="state == 'draft'"
                           decoration-warning="state == 'partially_completed'" decoration-danger="state == 'failed'"
                           widget="badge"/>
                </tree>
            </field>
        </record>

        <!--Order Queue  form view-->
        <record id="view_form_woocommerce_order_queue_form" model="ir.ui.view">
            <field name="name">Woocommerce Order Process Queue</field>
            <field name="model">woocommerce.order.data.queue</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="WooCommerce Order Process Queue" create="false">
                    <header>
                        <button string="Process Queue Manually" class="oe_highlight"
                                type="object" name="process_woocommerce_order_queue"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                        <div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="instance_id"/>
                                <label for="create_date" string="Imported at"/>
                                <field name="create_date" nolabel="1"/>
                            </group>
                            <group>
                                <field name="woocommerce_log_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Queue Detail Line" name="order_queue_detail_line">
                                <field name="woocommerce_order_queue_line_ids" readonly="1">
                                    <tree decoration-danger="state == 'failed'"
                                          decoration-success="state == 'completed'">
                                        <field name="name" readonly="1"/>
                                        <!--                                        <field name="shopify_order_queue_id"/>-->
                                        <!--                                        <field name="instance_id" readonly="1"/>-->
                                        <field name="sale_order_id"/>
                                        <field name="order_data_id"/>
                                        <field name="state"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name"/>
                                                    <field name="woocommerce_order_queue_id"/>
                                                    <field name="instance_id" readonly="1"/>
                                                    <field name="state" readonly="1"/>
                                                </group>
                                                <group>
                                                    <field name="order_data_id"/>
                                                    <field name="sale_order_id"/>
<!--                                                    <field name="number_of_fails"/>-->
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Response Data" name="response">
                                                    <field name="order_data_to_process" widget="ace"
                                                    />
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- action log-->
        <record id="action_woocommerce_order_process" model="ir.actions.act_window">
            <field name="name">Order Queue</field>
            <field name="res_model">woocommerce.order.data.queue</field>
            <field name="view_id" ref="view_woocommerce_order_queue_tree_view"/>
        </record>

    </data>
    <data noupdate="1">
        <record id="seq_woocommerce_order_queue" model="ir.sequence">
            <field name="name">woocommerce order queue seq</field>
            <field name="code">woocommerce.order.data.queue</field>
            <field name="padding">5</field>
            <field name="prefix">Order/Queue/</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
