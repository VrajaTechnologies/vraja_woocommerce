<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--form view-->
        <record id="woocommerce_taxes_form" model="ir.ui.view">
            <field name="name">Woocommerce Taxes Form</field>
            <field name="model">woocommerce.taxes</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="woocommerce_tax_id"/>
                                <field name="woocommerce_tax_name"/>
                                <field name="woocommerce_tax_rate"/>
                                <field name="woocommerce_tax_class"/>
                            </group>
                            <group>
                                <field name="woocommerce_country_id"/>
                                <field name="instance_id"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree view-->
        <record id="woocommerce_taxes_tree" model="ir.ui.view">
            <field name="name">woocommerce.taxes</field>
            <field name="model">woocommerce.taxes</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="woocommerce_tax_id"/>
                    <field name="woocommerce_tax_name"/>
                    <field name="woocommerce_tax_rate"/>
                    <field name="woocommerce_tax_class"/>
                </tree>
            </field>
        </record>

        <record id="action_woocommerce_taxes" model="ir.actions.act_window">
            <field name="name">Taxes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">woocommerce.taxes</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a WooCommerce Taxes
                </p>
            </field>
        </record>
    </data>
</odoo>
