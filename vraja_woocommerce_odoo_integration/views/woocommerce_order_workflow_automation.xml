<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="woocommerce_order_workflow_automation_form" model="ir.ui.view">
            <field name="name">order workflow automation form</field>
            <field name="model">woocommerce.order.workflow.automation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g. Name etc..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="journal_id" domain="[('type', 'in', ('bank', 'cash'))]" attrs="{'required':[('create_invoice','!=',False)]}"/>
                            </group>
                        </group>
                        <group>
                            <group string="Workflow Option">
                                <field name="confirm_sale_order" widget="boolean_toggle"/>
                                <field name="validate_delivery_order" widget="boolean_toggle"/>
                                <field name="create_invoice" attrs="{'invisible':[('confirm_sale_order','==',False)]}" widget="boolean_toggle" string="Create &amp; Validate Invoice"/>
                            </group>
                            <group string="Order Configuration">
                                <field name="policy_of_picking" widget="radio"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="order_workflow_automation_tree" model="ir.ui.view">
            <field name="name">order workflow automation tree</field>
            <field name="model">woocommerce.order.workflow.automation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="confirm_sale_order" widget="boolean_toggle"/>
                    <field name="validate_delivery_order" widget="boolean_toggle"/>
                    <field name="create_invoice"  widget="boolean_toggle" string="Create &amp; Validate Invoice"/>
                </tree>
            </field>
        </record>

        <record id="action_woocommerce_order_workflow_automation" model="ir.actions.act_window">
            <field name="name">Auto Workflow</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">woocommerce.order.workflow.automation</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Order Workflow Automation
                </p>
            </field>
        </record>
    </data>
</odoo>
