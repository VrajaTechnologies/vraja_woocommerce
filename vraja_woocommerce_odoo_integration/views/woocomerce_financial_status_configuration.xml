<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--form view-->
        <record id="woocommerce_financial_status_configuration_form" model="ir.ui.view">
            <field name="name">woocommerce financial status configuration form</field>
            <field name="model">woocommerce.financial.status.configuration</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
<!--                        <widget name="web_ribbon" text="Archived" bg_color="bg-danger"-->
<!--                                attrs="{'invisible': [('active', '=', True)]}"/>-->
                        <group>
                            <group>
                                <field name="instance_id" required="1"/>
                                <field name="company_id" required="1"/>
                                <field name="payment_gateway_id" required="1"/>
                            </group>
                            <group>
                                <field name="payment_term_id" required="1"/>
                                <field name="sale_auto_workflow_id" required="1"/>
                                <field name="financial_status" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree view-->
        <record id="woocommerce_financial_status_configuration_tree" model="ir.ui.view">
            <field name="name">woocommerce financial status configuration tree</field>
            <field name="model">woocommerce.financial.status.configuration</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="instance_id" required="1"/>
                    <field name="company_id" required="1"/>
                    <field name="payment_gateway_id" required="1"/>
                    <field name="payment_term_id" required="1"/>
                    <field name="sale_auto_workflow_id" required="1"/>
                    <field name="financial_status" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_woocommerce_financial_status_configuration" model="ir.actions.act_window">
            <field name="name">woocommerce Financial Status Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">woocommerce.financial.status.configuration</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a woocommerce Financial Status Configuration
                </p>
            </field>
        </record>
    </data>
</odoo>
