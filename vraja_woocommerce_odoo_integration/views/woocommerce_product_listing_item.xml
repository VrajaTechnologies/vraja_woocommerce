<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="woocommerce_product_listing_items_view_tree" model="ir.ui.view">
            <field name="name">Product Listing Items Tree View</field>
            <field name="model">woocommerce.product.listing.item</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name" force_save="1"/>
                    <field name="product_id"/>
                    <field name="product_sku"/>
                    <field name="woocommerce_product_variant_id"/>
                    <field name="woocommerce_instance_id"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="woocommerce_product_listing_item_view_form" model="ir.ui.view">
            <field name="name">Woocommerce Product Listing Form View</field>
            <field name="model">woocommerce.product.listing.item</field>
            <field name="arch" type="xml">
                <form string="Woocommerce Product Listing Item">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="product_sku" readonly="1"/>
                                <field name="stock_type" readonly="1"/>
                                <field name="woocommerce_product_variant_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="woocommerce_instance_id" readonly="1"/>
                                <field name="woocommerce_product_listing_id" readonly="1"/>

                                <!--                                <field name="inventory_management"/>-->
                            </group>
                        </group>
                        <!--                        <notebook>-->
                        <!--                            <page string="Product Images" name="product_images">-->
                        <!--                                <group>-->
                        <!--                                    <field name="image_ids" class="o_website_sale_image_list" context="{'default_name': name}" mode="kanban" options="{'create_text':'Add a Image'}"-->
                        <!--                                           nolabel="1"/>-->
                        <!--                                </group>-->
                        <!--                            </page>-->
                        <!--                        </notebook>-->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="woocommerce_product_listing_item_action" model="ir.actions.act_window">
            <field name="name">Woocommerce Listing Item</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">woocommerce.product.listing.item</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Woocommerce Product listing Items will display here.
                </p>
            </field>
        </record>
    </data>
</odoo>
