<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="export_woocommerce_product_wizard" model="ir.ui.view">
        <field name="name">export.woocommerce.product.wizard</field>
        <field name="model">export.woocommerce.product</field>
        <field name="arch" type="xml">
            <form string="Export Product Wizard Form">
                <group>
                    <field name="set_price" widget="boolean_toggle"/>
                    <field name="set_image" widget="boolean_toggle"/>
                </group>
                <footer>
                    <button string="Export Product To Woocommerce" type="object" name="export_woocommerce_product" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_export_woocommerce_product_wizard" model="ir.actions.act_window">
        <field name="name">Woocommerce Product Wizard</field>
        <field name="res_model">export.woocommerce.product</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>